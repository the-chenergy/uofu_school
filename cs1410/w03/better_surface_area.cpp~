#include <iostream>
#include <cmath>

/**
 * This is a program that will compute the surface area
 * of a rectangular solid.
 * 
 * --------
 * 
 * Qianlang Chen
 * u1172983
 * Tue, Aug 28, 2018
 * 
 */

int main()
{
  // ask for the inputs of the length, width, and depth of
  //   the solid.
  double width;
  std::cout << "Hi! What's the width (in meters) of the rectangular solid?\n";
  std::cin >> width;

  double length;
  std::cout << "What about the length (in meters)?\n";
  std::cin >> length;

  double depth;
  std::cout << "What about the depth (in meters)?\n";
  std::cin >> depth;

  // calculate the surface area of the given rectangular solid
  //   and display it.

  std::cout << "The surface area of your solid is "
	    << (2 * (length * width + length * depth + width * depth))
	    << " square meters!\n";
}
